<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:id="@+id/relative"
    android:layout_height="@dimen/xt100dp" >
	<ImageView 
	    android:layout_width="@dimen/xt70dp"
	    android:layout_height="@dimen/xt70dp"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/xt5dp"
		android:id="@+id/img"
		android:scaleType="centerCrop"
	    />
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_centerInParent="true"
	    android:layout_toRightOf="@id/img"
	    android:layout_marginLeft="@dimen/xt10dp"
	    android:layout_marginRight="@dimen/xt50dp"
	    
	    >
	    <TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="文件"
	    android:textSize="@dimen/xt18sp"
	    android:textColor="@color/setting_text"
	    android:id="@+id/name"
	     android:singleLine="true"
	     
	    android:ellipsize="middle"
	    />
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="@dimen/xt10dp"
	        >
		<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="文件"
	    android:gravity="center"
	    android:textSize="@dimen/xt15sp"
	    android:textColor="@color/black"
	    android:id="@+id/time"
	    />
			<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="文件"
	    android:gravity="center"
	    android:textSize="@dimen/xt15sp"
	    android:textColor="@color/black"
	    android:layout_marginLeft="@dimen/xt15dp"
	    android:id="@+id/size"
	    />
	    </LinearLayout>
	</LinearLayout>
	
    
			     <ImageView 
      android:layout_width="@dimen/xt30dp"
      android:layout_height="@dimen/xt30dp"
      android:src="@mipmap/chebox1"
      android:id="@+id/chebox"
      android:visibility="invisible"
      android:layout_marginRight="@dimen/xt10dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      />  
      <TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	  android:background="@color/xtb0b0b0"
	  android:layout_toRightOf="@id/img"
	  android:layout_marginLeft="@dimen/xt10dp"
	  android:layout_marginRight="@dimen/xt10dp"
	  android:layout_alignParentBottom="true"
	    />
</RelativeLayout>
	
</LinearLayout>