<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/update_phone_icon"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/update_phone_icon"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/update_phone_text"
        android:layout_below="@id/update_phone_icon"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="40dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:text="绑定的手机号:"
            android:layout_width="wrap_content"
            android:textColor="#666666"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/binding_phone"
            android:textSize="18sp"
            android:text="13988888888"
            android:layout_width="wrap_content"
            android:textColor="#323232"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <Button
        android:id="@+id/update_phone_btn"
        android:layout_below="@+id/update_phone_text"
        android:text="更换手机号码"
        android:textSize="24sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:background="@drawable/white_border"
        android:textColor="#666666"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


</RelativeLayout>