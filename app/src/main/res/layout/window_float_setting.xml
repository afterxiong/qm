<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xt200dp"
    android:layout_height="@dimen/xt120dp"
    android:background="@drawable/popup_bg"
    android:orientation="vertical" >
   <TextView 
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="手机截屏模式："
           android:textColor="@color/white"
           android:textSize="@dimen/xt16sp"
           android:layout_marginBottom="10dp"
       />
   <LinearLayout  
       android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginBottom="@dimen/xt5dp"
     android:orientation="vertical">
     
          <CheckBox 
          android:id="@+id/float_window_pc"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="盒子/PC模式"
         android:background="@null"
         android:paddingLeft="10dp"
         android:textColor="@color/white"
          android:textSize="@dimen/xt16sp"
         android:layout_marginLeft="@dimen/xt5dp"     
         android:layout_marginBottom="@dimen/xt10dp"
         android:button="@drawable/window_float_setting"
         />
     <CheckBox 
         android:id="@+id/float_window_mobile"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="手机模式"
           android:background="@null"
         android:paddingLeft="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/xt16sp"
          android:layout_marginLeft="@dimen/xt5dp"

         android:button="@drawable/window_float_setting"
         />
    
    
</LinearLayout>
</LinearLayout>
