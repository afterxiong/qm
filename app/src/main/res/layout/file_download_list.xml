<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/window_permiss_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/xt24sp"
            android:text="消息中心"
            android:layout_marginLeft="@dimen/xt10dp"
            android:layout_marginTop="@dimen/xt10dp"
            android:gravity="center"
            android:id="@+id/recieve_file_title"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/xt20dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/xt10dp"
            android:layout_marginTop="@dimen/xt10dp"
            android:id="@+id/close_file_dialog"
            android:src="@mipmap/file_recieve_dialog_close"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/xt200dp"
        android:id="@+id/recievefile"
     >
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/xt1dp"
        android:background="@color/middle_back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/xt10dp"
        android:gravity="center"
        android:id="@+id/friend_send"
        android:orientation="vertical">

<!--        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/b1"
            android:id="@+id/open_file"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/xt30dp"
                android:layout_marginRight="@dimen/xt30dp"
                android:text="立即打开"/>

        </LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/black"
                android:text="自动打开文件"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/bt_2"
                android:id="@+id/is_open"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>