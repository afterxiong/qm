<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/common_corners">

    <TextView
        android:id="@+id/permiss_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="权限申请"
        android:layout_marginTop="20dp"
        android:textColor="@color/permiss_dialog_setting_tetle" />


    <TextView
        android:id="@+id/permission_content"
        android:layout_width="280dp"
        android:text="@string/permission_setting"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:textColor="@color/permiss_dialog_setting_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#2c2c2d" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/permission_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="去设置"
            android:textColor="#30A5FF" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#2c2c2d" />


        <TextView
            android:id="@+id/permission_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="取消"
            android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>


</LinearLayout>