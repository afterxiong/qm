<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="@dimen/margin_barder"
    android:layout_marginRight="@dimen/margin_barder"
    android:layout_marginLeft="@dimen/margin_barder"
    android:background="#FFFFFF"
    android:padding="6dp">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@mipmap/administrators_icon"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_team"
        android:layout_width="0dip"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/item_morning_record"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="晨会录音"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_visit_record"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_color"
        android:text="拜访记录"
        android:layout_height="match_parent" />


</LinearLayout>