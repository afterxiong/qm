<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout 
    android:layout_width="@dimen/xt250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/linear_shap"
    android:gravity="center"
    android:padding="@dimen/xt10dp"
    android:layout_marginRight="@dimen/xt10dp"
     >
     
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/divice_top"
            android:gravity="center"
            android:textSize="@dimen/xt18dp"
            android:textColor="@color/gray"
            />
            <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="@color/xtb0b0b0"
            android:dividerHeight="0.5dp"
            android:layout_marginTop="@dimen/xt10dp"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </ListView>

</LinearLayout>
</LinearLayout>
