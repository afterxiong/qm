<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#00000000"
    >

    <ImageView
        android:id="@+id/notify_image_view"
        android:layout_width="@dimen/xt40dp"
        android:layout_height="@dimen/xt40dp"
        android:src="@mipmap/icon2"
         />
    <LinearLayout 
                android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/xt10dp"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/notify_button_play_pause2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xt15sp"
        android:textColor="@color/black"
        android:text="@string/app_name" />
    <TextView
        android:id="@+id/notify_button_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xt13sp"
        android:textColor="@color/black"
        android:text="play" />
</LinearLayout>
<LinearLayout 
             android:layout_width="@dimen/xt35dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/xt15dp"
        android:id="@+id/notify_button_random"
        android:gravity="center"
        android:orientation="vertical"
     >
      <ImageView
        android:layout_width="@dimen/xt15dp"
        android:layout_height="@dimen/xt15dp"
        android:id="@+id/notify_button_random1"
        android:src="@mipmap/touping_stop"
/>
      <TextView 
                  android:layout_width="wrap_content"
        android:layout_height="wrap_content"
                android:gravity="center_vertical"
        android:textSize="@dimen/xt13sp"
        android:id="@+id/notify_button_random2"
        android:textColor="@color/xt_red"
        android:layout_marginTop="1dp"
        android:text="停止" 
          />
 </LinearLayout>
</LinearLayout>