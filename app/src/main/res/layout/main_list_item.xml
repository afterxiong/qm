<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xt60dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@mipmap/main_shap"
        android:padding="@dimen/xt5dp" >

        <RelativeLayout
            android:layout_width="@dimen/xt50dp"
            android:layout_height="@dimen/xt50dp"
            android:layout_marginLeft="@dimen/xt15dp"
            android:gravity="center"
            android:id="@+id/lock_item">
            <com.jauker.widget.BadgeView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/bageView"
               />
        <ImageView
            android:id="@+id/is_lock"
            android:layout_width="@dimen/xt35dp"
            android:layout_height="@dimen/xt35dp"
            android:src="@mipmap/list_img" />
        </RelativeLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/xt10dp"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/xt50dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="@dimen/xt18sp" />
    </LinearLayout>

            <ImageView
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/xt15dp"
                android:src="@mipmap/screen_more_box" />

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/xt15dp"
                android:visibility="gone" />

