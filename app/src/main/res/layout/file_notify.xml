<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="#00000000"
    >

    <ImageView
        android:id="@+id/notify_image_view"
        android:layout_width="@dimen/xt40dp"
        android:layout_height="@dimen/xt40dp"
        android:src="@mipmap/title_icon"
         />
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/xt10dp"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/notify_button_play_pause2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xt15sp"
        style="@style/notify_style"
        android:text="@string/app_name" />
    <TextView
        android:id="@+id/notify_button_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/xt13sp"
        style="@style/notify_style"
        android:text="好友小明给你发来了1个文件" />

 </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/xt100dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/xt5dp"
        android:id="@+id/notify_button_random"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/xt15sp"
            android:id="@+id/notify_open"
            android:layout_marginTop="1dp"
            android:text="立即打开"
            style="@style/notify_style"
            android:autoLink="all"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/about_enter"/>
    </LinearLayout>


</LinearLayout>