<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


        <com.xcg.camera.CameraPreview
            android:id="@+id/capture_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/capture_crop_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:layout_height="match_parent"
                android:src="@drawable/qr_border" />

            <ImageView
                android:id="@+id/capture_scan_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/scan_line" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/capture_mask_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/capture_crop_view"
            android:layout_alignParentTop="true"
            android:background="@mipmap/shadow" />

        <TextView
            android:id="@+id/capture_mask_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="扫一扫，加入团队/绑定任屏"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/capture_crop_view"
            android:background="@mipmap/shadow" />

        <ImageView
            android:id="@+id/capture_mask_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/capture_mask_bottom"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/capture_mask_top"
            android:layout_toLeftOf="@id/capture_crop_view"
            android:layout_toStartOf="@id/capture_crop_view"
            android:background="@mipmap/shadow" />

        <ImageView
            android:id="@+id/capture_mask_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/capture_mask_bottom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/capture_mask_top"
            android:layout_toEndOf="@id/capture_crop_view"
            android:layout_toRightOf="@id/capture_crop_view"
            android:background="@mipmap/shadow" />

</RelativeLayout>