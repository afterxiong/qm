<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/xtefefef"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settingTitle"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:padding="@dimen/xt8dp"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xt80dp"
        android:background="@mipmap/setting_bg"
        android:layout_marginTop="@dimen/xt10dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="@dimen/xt5dp"
                android:id="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/name_setting"/>
            <TextView android:layout_width="wrap_content"
                android:textSize="@dimen/xt15sp"
                android:layout_height="wrap_content"
                android:text="@string/namesetting"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv"/>
        </RelativeLayout>
        <com.shareshow.airpc.widget.LineEditText
            android:id="@+id/et"
            style="?android:attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@null"
            android:layout_marginBottom="@dimen/xt12dp"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:hint=""
            android:maxLength="10"
            android:textColor="@android:color/black"
            android:gravity="center|bottom"
            android:text="@null" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/xt5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xt170dp"
        android:padding="@dimen/xt8dp"
        android:background="@mipmap/setting_bg"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xt5dp"
                android:src="@mipmap/setting_tp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tpsetting"
                android:textSize="@dimen/xt15sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv2"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_margin="@dimen/xt5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seek"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@mipmap/about_appbar"
                android:maxHeight="@dimen/xt5dp"
                android:minHeight="@dimen/xt5dp"
                android:thumbOffset="@dimen/xt10dp"
                android:thumb="@drawable/seekbar"/>
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gray"
                    android:text="流畅"/>
                <TextView android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:layout_weight="1"
                    android:text="默认"/>
                <TextView android:layout_width="0dp"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="清晰"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qingxi"
                android:textColor="@color/xt575757"
                android:textSize="@dimen/xt15sp"
                android:layout_marginLeft="@dimen/xt20dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/radiogroup1"
                android:layout_marginLeft="@dimen/xt10dp"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/a0"
                    android:text="@string/gaoqing"
                    android:button="@drawable/radio"
                    android:textColor="@color/xt575757"
                    android:paddingLeft="@dimen/xt5dp"
                    android:textSize="@dimen/xt15sp"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/a1"
                    android:text="@string/biaoqing"
                    android:button="@drawable/radio"
                    android:paddingLeft="@dimen/xt5dp"
                    android:layout_marginLeft="@dimen/xt25dp"
                    android:textColor="@color/xt575757"
                    android:textSize="@dimen/xt15sp"
                    android:checked="true"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/xt10dp"
            android:layout_marginTop="@dimen/xt12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/show_permit"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/xt10dp"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_button"
                        android:id="@+id/chebox"
                        android:layout_marginLeft="@dimen/xt20dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/t_s"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/xt13sp"
                        android:layout_marginLeft="@dimen/xt6dp"
                        />
                </LinearLayout>

                <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginTop="@dimen/xt5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/expand_permit"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/xt5dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/check_button"
                            android:id="@+id/expand"
                            android:layout_marginLeft="@dimen/xt20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expand"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/xt13sp"
                            android:layout_marginLeft="@dimen/xt6dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/xt5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/audio_l"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/xt5dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/check_button"
                            android:id="@+id/audio_ck"
                            android:layout_marginLeft="@dimen/xt20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="打开音频"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/xt13sp"
                            android:layout_marginLeft="@dimen/xt6dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="@dimen/xt5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/window_start"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/xt5dp">
                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:button="@drawable/check_button"
                            android:id="@+id/float_window_selector"
                            android:layout_marginLeft="@dimen/xt20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开启浮窗"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/xt13sp"
                            android:layout_marginLeft="@dimen/xt6dp"
                            />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/xt130dp"
        android:layout_marginTop="@dimen/xt5dp"

        android:padding="@dimen/xt8dp"
        android:background="@mipmap/setting_bg"
        android:orientation="vertical" >
        <RelativeLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/xt5dp"
                android:src="@mipmap/setting_search"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settingsearch"
                android:textSize="@dimen/xt15sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv3"/>
        </RelativeLayout>
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/xt32dp"
            android:layout_marginTop="@dimen/xt12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/xt12dp"
                    >
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_button"
                        android:id="@+id/isScan_ck"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="扫描二维码连接（适用于公共场合）"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/xt13sp"
                        android:layout_marginLeft="@dimen/xt6dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/xt5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/xt5dp">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_button"
                        android:id="@+id/auto_ck"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自动搜索连接（适用于会议室）"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/xt13sp"
                        android:layout_marginLeft="@dimen/xt6dp"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/xt5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/xt120dp"
        android:padding="@dimen/xt8dp"
        android:background="@mipmap/setting_bg"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv4"
                android:layout_marginLeft="@dimen/xt5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_carch"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clearcache"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/xt15sp"
                android:layout_toRightOf="@id/iv4"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/xt5dp">
            <TextView
                android:id="@+id/tv_carche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:layout_gravity="center_horizontal"
                android:text="20" />
            <Button
                android:id="@+id/clear"
                android:layout_marginTop="@dimen/xt10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/button_carch"/>
        </LinearLayout>
</LinearLayout>
    </LinearLayout>
