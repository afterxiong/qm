<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <TextView
        android:id="@+id/filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="收到张三发送来的sdfsf"
        android:maxEms="16"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/xt10dp"
        android:layout_marginLeft="@dimen/xt20dp"
        android:layout_marginBottom="@dimen/xt10dp"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/middle_back"
        android:layout_margin="@dimen/xt5dp"
        />

</LinearLayout>