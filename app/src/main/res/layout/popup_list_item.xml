
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:id="@+id/relative"
    android:padding="@dimen/xt5dp"
    android:layout_height="@dimen/xt70dp">  
<ImageView 
	    android:layout_width="@dimen/xt50dp"
	    android:layout_height="@dimen/xt50dp"
		android:src="@mipmap/file_icon_photo "
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/xt5dp"
		android:scaleType="centerCrop"
		android:id="@+id/img"
	    />
	
 <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img"
	    android:layout_marginLeft="@dimen/xt10dp"
	    android:layout_centerVertical="true"
        >
	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/wenjian"
	    android:textSize="@dimen/xt15sp"
	    android:textColor="@color/setting_text"
	    android:id="@+id/name"
	    android:layout_marginRight="@dimen/xt50dp"
	    android:singleLine="true"
	    android:ellipsize="middle"
	    />
	
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_marginTop="@dimen/xt5dp"
	    >
		<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/wenjian"
	    android:gravity="center"
	    android:textSize="@dimen/xt13sp"
	    android:textColor="@color/black"
	    android:id="@+id/time"
	    />
			<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/wenjian"
	    android:gravity="center"
	    android:textSize="@dimen/xt13sp"
	    android:textColor="@color/black"
	    android:layout_marginLeft="@dimen/xt10dp"
	    android:id="@+id/size"
	    />
			</LinearLayout>
				</LinearLayout>
			     <ImageView 
      android:layout_width="@dimen/xt30dp"
      android:layout_height="@dimen/xt30dp"
      android:src="@mipmap/chebox1"
      android:id="@+id/chebox"
      android:visibility="invisible"
      android:layout_marginRight="@dimen/xt10dp"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      />  
</RelativeLayout>
	<TextView 
	    android:layout_width="fill_parent"
	    android:layout_height="0.5dp"
	  android:background="@color/xtb0b0b0"
	  android:layout_marginTop="1dp"
	  android:layout_marginBottom="1dp"
	  	  android:layout_marginLeft="@dimen/xt10dp"
	  android:layout_marginRight="@dimen/xt10dp"
	    />
	

</LinearLayout>