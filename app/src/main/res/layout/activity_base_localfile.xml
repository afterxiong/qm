<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xtefefef"
    android:orientation="vertical" >

    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="@dimen/xt60dp"
       android:orientation="horizontal"
  	   android:background="@color/toolbar_background"
       android:paddingTop="@dimen/xt20dp"
       >
       <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           >
           <LinearLayout 
               android:layout_width="@dimen/xt70dp"
               android:layout_height="@dimen/xt40dp"
               android:layout_centerVertical="true"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_marginLeft="@dimen/xt10dp"
               android:id="@+id/back"
              
               >
           <ImageView 
               android:layout_width="@dimen/xt25dp"
               android:layout_height="@dimen/xt25dp"
               android:src="@mipmap/back_icon"
               />
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/xt18dp"
               android:textColor="@color/white"
               android:text="返回"
               android:background="@null"
               />
           </LinearLayout>
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:layout_centerInParent="true"
               android:textSize="@dimen/xt20sp"
               android:id="@+id/head_title"
               />
              <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/xt18sp"
               android:textColor="@color/white"
               android:text="取消"
               android:visibility="gone"
               android:layout_centerVertical="true"
               android:background="@null"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/xt10dp"
               android:id="@+id/cancel"
               />
              <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/xt18sp"
               android:textColor="@color/white"
               android:text="排序"
               android:layout_centerVertical="true"
               android:background="@null"
               android:layout_alignParentRight="true"
               android:layout_marginRight="@dimen/xt10dp"
               android:id="@+id/sort"
               />
       </RelativeLayout>
   </LinearLayout>
      <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:listSelector="#00000000"
        android:scrollbars="none"
  	 	android:visibility="gone"
        android:divider="@null"
	/>

	
	        <com.shareshow.airpc.menu.SwipeMenuListView
            android:id="@+id/swipeMenu_ListView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:layout_weight="1"
            android:visibility="gone"
            android:listSelector="#00000000"
            android:scrollbars="none" >
        </com.shareshow.airpc.menu.SwipeMenuListView>
		<TextView 
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:textColor="@color/black"
               android:gravity="center"
               android:textSize="@dimen/xt20sp"
               android:id="@+id/without_localfile"
               />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xt60dp"
        android:background="@mipmap/file_buttom"
        android:orientation="horizontal"
        android:id="@+id/buttom"
        android:visibility="gone"
        >
          <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/xt3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView 
                android:layout_width="@dimen/xt55dp"
            	android:id="@+id/share"
                android:layout_height="@dimen/xt55dp"
                android:background="@drawable/sdcard_share"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/xt3dp"
            android:id="@+id/show_upLoad"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView 
           		android:id="@+id/up_load"
                android:layout_width="@dimen/xt50dp"
                android:layout_height="@dimen/xt50dp"
                android:background="@drawable/up_load_bg"
                />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/xt3dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView 
            	android:id="@+id/selectAll"
                android:layout_width="@dimen/xt50dp"
                android:layout_height="@dimen/xt50dp"
                android:background="@drawable/choose_all_bg"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
