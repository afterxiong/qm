<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="@dimen/margin_barder"
    android:layout_marginRight="@dimen/margin_barder"
    android:layout_marginTop="@dimen/margin_barder"
    android:background="#FFFFFF"
    android:padding="6dp">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:src="@mipmap/administrators_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_toRightOf="@+id/item_icon"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/item_tip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:text="[申请加入组织,请审核]"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/item_agree"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/item_refuse"
        android:gravity="center"
        android:padding="8dp"
        android:text="同意"
        android:textColor="@color/agree_text_color" />

    <TextView
        android:id="@+id/item_refuse"
        android:layout_width="wrap_content"
        android:padding="8dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="拒绝"
        android:textColor="@color/refuse_text_color" />


</RelativeLayout>