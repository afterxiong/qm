<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notify_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:background="@drawable/back_shape"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/notifcation_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:src="@mipmap/notifcation_icon_unread" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/notifcation_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifcation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:text="关于工作安排通知"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/notifcation_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="12"
            android:padding="2dp"
            android:text="春节放假通知春节放假通知春节放假通知春节放假通知"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/notifcation_date"
        android:text="2018.03.23"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>