<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/xt120dp"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/xt10dp"
    android:background="@drawable/popup_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/xt10dp">


    <TextView
        android:id="@+id/create_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xt2dp"
        android:layout_marginTop="@dimen/xt10dp"
        android:padding="@dimen/xt3dp"
        android:text="创建团队"
        android:textColor="@color/popup"
        android:textSize="@dimen/xt15sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="@dimen/xt3dp"
        android:background="@color/light_white" />


    <TextView
        android:id="@+id/add_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/xt2dp"
        android:layout_marginTop="@dimen/xt5dp"
        android:padding="@dimen/xt3dp"
        android:text="加入团队"
        android:textColor="@color/popup"
        android:textSize="@dimen/xt15sp" />


</LinearLayout>