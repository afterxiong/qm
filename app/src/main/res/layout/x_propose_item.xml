<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="@dimen/xt90dp"
    android:layout_height="@dimen/xt100dp">
    <ImageView
        android:layout_width="90dp"
        android:id="@+id/image_item"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:layout_height="80dp" />
    <Button
        android:id="@+id/child_delete"
        android:layout_width="@dimen/xt25dp"
        android:layout_height="@dimen/xt25dp"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/xt4dp"
        android:background="@mipmap/ic_delete" />
</RelativeLayout>
</LinearLayout>